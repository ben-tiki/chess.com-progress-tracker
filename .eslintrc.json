{
  "env": { "browser": true, "es2021": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 12, "sourceType": "module" },
  "rules": {
    "no-unused-vars": ["warn", { "args": "none", "varsIgnorePattern": "^d3$" }],
    "no-undef": "off"
  },
  "globals": { "d3": "readonly" }
}

